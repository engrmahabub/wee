;------------------------------------------
; demo for local variable site-effect
;------------------------------------------
#driver

;local variable
var x := 1

; method side-effects
add():
  set x += 1
  put(x)
add.  

add ;will print 2
add ;will print 3

put(x); x = 3 (modified)     

write  

; changing x influence method
set x := 0  ; new x value 

add()   ; will print 1
add()   ; will print 2

put(x); x = 2 (modified)

write

stop;